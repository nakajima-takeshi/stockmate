<div class="container py-8 flex items-center justify-center">
    <div class="rounded-lg w-full h-full max-w-xl p-8 bg-base-100 shadow-lg">
        <div class="p-4">
            <div class="font-bold mt-8 text-center text-5xl text-green-800 mb-6">編集</div>
            <div data-controller="items category-icon">
                <%= form_with model: @item, local: true do |form| %>
                    <%= render "shared/error_messages", object: @item %>
                <div class="mb-4 bg-gray-100 p-4 rounded">
                    <%= form.label :category, 'カテゴリー', class: 'font-bold' %>
                    <%= form.select :category, [
                    ['シャンプー', 'shampoo'], 
                    ['ボディソープ', 'body_soap'], 
                    ['洗濯用洗剤(粉)', 'laundry_detergent_powder'], 
                    ['洗濯用洗剤(液)', 'laundry_detergent_liquid'], 
                    ['柔軟剤', 'fabric_softeners'], 
                    ['食器用洗剤', 'dishwashing_detergent'], 
                    ['化粧水', 'lotion'], 
                    ['美容液', 'serum'], 
                    ['保湿クリーム', 'moisturising_cream'], 
                    ['洗顔料', 'face_wash'], 
                    ['日焼け止め', 'sunscreen'], 
                    ['その他', 'others']], 
                    { include_blank: '選択してください' }, { 
                    id: 'category-select', 
                    data: { items_target: "categorySelect", category_icon_target: "select" }, 
                    class: "block w-full px-4 py-2 border border-gray-300 rounded shadow" } %>
                </div>
                <div class="mb-4 bg-gray-100 p-4 rounded">
                    <%= form.label :name, '商品名', class: "block text-gray-700 font-bold mb-2" %>
                    <%= form.text_field :name, class: "block w-full px-4 py-2 border border-gray-300 rounded shadow focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
                </div>

                <div class="mb-4 bg-gray-100 p-4 rounded">
                    <%= form.label :volume, '内包量', class: "block text-gray-700 font-bold mb-2" %>
                    <%= form.text_field :volume, class: "block w-full px-4 py-2 border border-gray-300 rounded shadow focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
                    <span data-items-target="unit" id="unit-span"></span>
                </div>

                <div class="mb-4 bg-gray-100 p-4 rounded">
                    <%= form.label :used_count_per_weekly, '1週間の使用回数', class: "block text-gray-700 font-bold mb-2" %>
                    <%= form.text_field :used_count_per_weekly, class: "block w-full px-4 py-2 border border-gray-300 rounded shadow focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
                </div>

                <div class="mb-4 bg-gray-100 p-4 rounded">
                    <%= form.label :memo, 'メモ', class: "block text-gray-700 font-bold mb-2" %>
                    <%= form.text_area :memo, class: "block w-full px-4 py-2 border border-gray-300 rounded shadow focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
                </div>
                <div class="flex justify-center mb-4">
                    <%= form.submit '更新',
                        class: "bg-green-800 hover:bg-green-700 text-white font-medium py-3 px-12 rounded text-center",
                        data: { action: "click->category-icon#confirmIcon"} %>
                </div>
            <% end %>
            </div>
        </div>
    </div>
</div>
