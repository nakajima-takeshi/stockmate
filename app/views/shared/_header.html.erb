<div class="navbar fixed top-0 left-0 w-full bg-[#f8fffb] z-50">
  <div class="flex-1">
    <%= link_to root_path, class: "btn btn-ghost" do %>
      <%= image_tag("stockmate_logo.png", class: "h-8 md:h-12", alt: "Stock Mate") %>
    <% end %>
  </div>
  <div class="flex space-x-2 md:space-x-3">
    <button class="bg-green-800 hover:bg-green-700 text-white rounded px-2 md:px-4 py-2 text-sm md:text-white" onclick="my_modal_2.showModal()">友達追加</button>
    <dialog id="my_modal_2" class="modal">
      <div class="modal-box">
        <h3 class="text-3xl text-center flex-auto font-bold">StockMate 友達追加QR</h3>
        <p class="py-4 text-center">
          <%= image_tag "stockmate_qr.png", alt: "LINE友達追加QR", class: "mx-auto" %>
        </p>
      </div>
      <form method="dialog" class="modal-backdrop">
        <button>close</button>
      </form>
    </dialog>
    <%= link_to "マイページ", items_path, class: "bg-green-800 hover:bg-green-700 text-white rounded px-2 md:px-4 py-2 text-sm md:text-white" %>
    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "bg-green-800 hover:bg-green-700 text-white rounded px-2 md:px-4 py-2 text-sm md:text-white" %>
  </div>
</div>
